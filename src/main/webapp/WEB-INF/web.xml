<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Archetype Created Web Application</display-name>

    <filter>
        <filter-name>login</filter-name>
        <filter-class>com.epam.filters.AuthorisationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>login</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>role</filter-name>
        <filter-class>com.epam.filters.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>role</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>webapp</servlet-name>
        <servlet-class>com.epam.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>webapp</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <jsp-config>
        <taglib>
            <taglib-uri>https://epam.com/jsp/tlds/mytags</taglib-uri>
            <taglib-location>WEB-INF/pagination.tld</taglib-location>
        </taglib>
    </jsp-config>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/view/error.jsp</location>
    </error-page>
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            D:\dev_tools\apache-tomcat-9.0.50\webapps\webapp\WEB-INF\images
        </param-value>
    </context-param>
</web-app>
